<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:id="@+id/back"
        style="@style/MyListBackContent"
        android:tag="back" >

        <LinearLayout
            android:id="@+id/swipe_linearLayout"
            style="@style/MyListButtonAction"
            android:layout_width="200px"
            android:layout_height="match_parent"
            android:background="#FF0000"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FF0000"
                android:text="刪除"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <!--
             <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/swipe_button2"
                style="@style/MyListButtonAction"
                android:text="Button 2"/>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/swipe_button3"
                style="@style/MyListButtonAction"
                android:text="Button 3"/>
        -->

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/front"
        style="@style/MyListFrontContent"
        android:orientation="vertical"
        android:tag="front" >

        <!--
             <ImageView
                style="@style/MyListImage"
                android:id="@+id/example_image"/>
        -->

        <TextView
            android:id="@+id/tvMsgTitle"
            style="@style/MyListTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <!--
             <TextView
            android:id="@+id/tvMsgStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvMsgTitle"
            android:layout_below="@+id/tvMsgTitle"
            android:text="TextView" />
        -->

        <TextView
            android:id="@+id/tvMsgTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvMsgTitle"
            android:layout_below="@+id/tvMsgTitle" />
    </RelativeLayout>

</FrameLayout>